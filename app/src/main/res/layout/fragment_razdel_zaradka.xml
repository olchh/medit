<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".razdel_zaradka">

    <ImageView
        android:id="@+id/image_fon_razdel_zar"
        android:layout_width="412dp"
        android:layout_height="822dp"
        android:src="@drawable/fon6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-46dp" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="403dp"
        android:layout_height="655dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewRazdelZar1"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:text="Упражнения для головы и шеи"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/but_raz_zr1"
                android:layout_width="140dp"
                android:layout_height="170dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/zr2" />

            <ImageButton
                android:id="@+id/but_raz_zr2"
                android:layout_width="140dp"
                android:layout_height="170dp"
                android:layout_marginStart="220dp"
                android:layout_marginTop="-170dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/zr3" />

            <TextView
                android:id="@+id/textViewRazdelZar2"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:text="Упражнения для рук"
                android:textColor="#000000"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/but_raz_zr3"
                android:layout_width="140dp"
                android:layout_height="170dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/zr4" />

            <ImageButton
                android:id="@+id/but_raz_zr4"
                android:layout_width="140dp"
                android:layout_height="170dp"
                android:layout_marginStart="220dp"
                android:layout_marginTop="-170dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/zr5" />

            <TextView
                android:id="@+id/textViewRazdelZar3"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:text="Упражнения для туловища"
                android:textColor="#000000"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/but_raz_zr5"
                android:layout_width="140dp"
                android:layout_height="170dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/zr6" />

            <ImageButton
                android:id="@+id/but_raz_zr6"
                android:layout_width="140dp"
                android:layout_height="170dp"
                android:layout_marginStart="220dp"
                android:layout_marginTop="-170dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/zr7" />

            <TextView
                android:id="@+id/textViewRazdelZar4"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:text="Упражнения для ног"
                android:textColor="#000000"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/but_raz_zr7"
                android:layout_width="140dp"
                android:layout_height="170dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="-10dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/zr8" />

            <ImageButton
                android:id="@+id/but_raz_zr8"
                android:layout_width="140dp"
                android:layout_height="170dp"
                android:layout_marginStart="220dp"
                android:layout_marginTop="-170dp"
                android:layout_marginEnd="-10dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/zr9" />

        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView9"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="#e7c697"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/button_naz4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/button_naz1" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>